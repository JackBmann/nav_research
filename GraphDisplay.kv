#:kivy 1.0.9

<GraphDisplayWidget>:
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"

<DisplayVertex>:
    size: 10, 10
    x_position: self.x_position
    y_position: self.y_position
    number: self.vertex_number
    canvas:
        Ellipse:
            pos: self.x_position, self.y_position
            size: self.size

    Label:
        font_size: 35
        color: 152, 14, 17, 1
        center_x: root.x_position + 128
        center_y: root.y_position + 128
        text: root.number
